@page
@model LeitorNfe.Pages.Pedido.CreateModel

@{
    ViewData["Title"] = "Create";
}



<h1>Adicionar</h1>

<h4>Detalhes do pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PedidoCompra.Numero" class="control-label"></label>
                <input asp-for="PedidoCompra.Numero" class="form-control" />
                <span asp-validation-for="PedidoCompra.Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PedidoCompra.Descricao" class="control-label"></label>
                <input asp-for="PedidoCompra.Descricao" class="form-control" />
                <span asp-validation-for="PedidoCompra.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 20px;">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar</a>
</div>
